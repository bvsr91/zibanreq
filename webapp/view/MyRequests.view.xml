<mvc:View controllerName="com.ferrero.zibanreq.controller.MyRequests"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:t="sap.ui.table">
    <Page showHeader="false" enableScrolling="true" class="sapUiContentPadding" showNavButton="false">
        <content>
            <Panel expandable="true" headerText="Filter Bar" class="sapUiNoContentPadding">
                <content>
                    <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Request" />
                </content>
            </Panel>
            <smartTable:SmartTable entitySet="Request" id="idSTRequest" smartFilterId="smartFilterBar" useExportToExcel="true" beforeExport="onBeforeExport" useTablePersonalisation="true" header="My Requests" showRowCount="true" useVariantManagement="false" enableAutoBinding="true" class="sapUiResponsiveContentPadding" tableType="Table" enableAutoColumnWidth="true" initiallyVisibleFields="RequestID,VendorUser,VendorName,VendorCode,
                    IBAN,AccountHolder,BIC_SWIFT_Code" ignoredFields="RequestUUID,linkToAttach_uuid" requestAtLeastFields="RequestUUID,linkToAttach_uuid">
                <t:Table id="idUiTabMyRequest" visibleRowCount="10">
                    <t:columns>
                        <t:Column width="10rem">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "linkToAttach_uuid", "columnIndex": 2, "width": "360px", "leadingProperty": "linkToAttach_uuid"}'/>
                            </t:customData>
                            <Label text="Attachment" />
                            <t:template>
                                <Link text="Download" press="onPressDownloadLink" wrapping="false" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
                <smartTable:customToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer />
                            <!-- <Button icon="sap-icon://add" tooltip="Add new record" press=".handleAddVendor" /> -->
                            <!-- <Button id="createButton" icon="sap-icon://add-document" tooltip="Create" visible="{userModel>/bPricingVendorAddBtn}" press="onOpenAddDialog"/> -->
                        </content>
                    </OverflowToolbar>
                </smartTable:customToolbar>
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>